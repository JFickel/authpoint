<!DOCTYPE html>
<html>
  <head>
    <title><%= t(:app) -%></title>
    <link rel="stylesheet" src="//normalize-css.googlecode.com/svn/trunk/normalize.css" />
    <%= stylesheet_link_tag :all %>
    <%= yield :stylesheets %>
    <%= csrf_meta_tag %>
  </head>
  <body>
    <%= render :partial => 'layouts/header' %>
    <%= render_flash_messages %>
    <div id="content">
      <%= yield %>
    </div>
    <%= javascript_include_tag :defaults, :cache => 'app' %>
    <%= yield :javascripts %>
  </body>
</html>